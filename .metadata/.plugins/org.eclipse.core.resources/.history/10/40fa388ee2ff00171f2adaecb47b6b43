import java.lang.Math;

public class Limit {
	
	public static double fx(double x) {
		double retval = 0;
		retval = (Math.pow(x, 2) - 1)/(x - 1);
		return retval;
	}
	
	public static void main (String[] args) {
		System.out.println("Take the function f(x) = ((x^2) - 1)/(x - 1)");
		System.out.println("f(0.5) = " + fx(0.5));
		System.out.println("f(0.9) = " + Math.round(fx(0.9)*10000.0)/10000.0);
		System.out.println("f(0.99) = " + Math.round(fx(0.9)*10000.0)/10000.0);
		System.out.println("f(0.999) = " + fx(0.99));
		System.out.println("f(0.9999) = " + fx(0.99));
		System.out.println("f(0.99999) = " + fx(0.99));
	}

}
