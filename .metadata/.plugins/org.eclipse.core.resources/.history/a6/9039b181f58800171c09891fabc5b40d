
public class problems {
	
	public static void main(String[] args) {
		triangle(5);
	}
	
	//Problem 1
	public int ret() {
		return 17;
	}
	
	//Problem 2
	public int logic(boolean a, boolean b, boolean c) {
		if (a && b && c) {
			return 1;
		} else {
			return 0;
		}
	}
	
	//Problem 3
	public static void triangle(int number) {
		for (int i = 0; i < number + 1; i++) {
			for (int k = 0; k < i; k++) {
				System.out.print("*");
			}
			System.out.println("");
		}
	}
	
	

}
